{
  "name": "angular-quickstart-webpack",
  "author": "Sahil Malik (sahilmalik@winsmarts.com)",
  "description": "Angular quick start using Webpack",
  "keywords": [
    "angular",
    "webpack",
    "typescript"
  ],
  "license": "ISC",  
  "version": "1.0.0",
  "scripts": {
    "start":"tsc && webpack-dev-server --config webpack.config.js --inline --port 4200 --colors --watch --content-base src",
    "bundle":"webpack --config webpack.config.js --source-map",
    "tsc": "tsc",
    "tsc:w": "tsc -w"
  },
  "dependencies": {
    "angular": "1.5.5",
    "angular-route": "1.5.5",    
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@angular/upgrade":"^4.0.0",
    "systemjs": "0.19.27",
    "es6-shim": "0.35.3",
    "reflect-metadata": "^0.1.3",
    "core-js": "^2.4.1",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.5"
  },
  "devDependencies": {
    "@types/node": "7.0.8",
    "@types/es6-shim":"0.31.32",
    "typescript": "~2.2.1",
    "webpack": "^1.14.0",
    "webpack-dev-server":"^1.16.2",
    "ts-loader":"1.3.3",
    "html-loader":"0.4.4",
    "css-loader":"0.26.1"
  }
}